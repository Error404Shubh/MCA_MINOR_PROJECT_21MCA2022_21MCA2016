<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettinsActivity"
    android:background="#ef6d57">
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_settings"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#F1D9F3">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_settings"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="58dp">

                <TextView
                    android:id="@+id/close_settings_btn"
                    android:layout_width="121dp"
                    android:layout_height="38dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginStart="49dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/loginimg_bg"
                    android:gravity="center"
                    android:text="Close"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/update_account_settings_btn"
                    android:layout_width="125dp"
                    android:layout_height="36dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="47dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/loginimg_bg"
                    android:gravity="center"
                    android:text="Update"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </androidx.appcompat.widget.Toolbar>

    </com.google.android.material.appbar.AppBarLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_image"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_below="@+id/app_bar_settings"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="146dp"
        android:layout_marginTop="187dp"
        android:layout_marginEnd="135dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/profile_image_change_btn"
        android:layout_width="115dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/settings_profile_image"
        android:layout_alignStart="@+id/settings_profile_image"
        android:layout_alignEnd="@+id/settings_profile_image"
        android:layout_marginStart="14dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="1dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:text="Change Profile"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/settings_phone_number"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profile_image_change_btn"
        android:layout_alignEnd="@+id/settings_profile_image"
        android:layout_alignParentStart="true"
        android:layout_marginStart="28dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="-113dp"
        android:background="@drawable/input_design"
        android:hint="Phone Number..."
        android:padding="10dp"
        android:textColor="@color/small"
        android:textColorHint="@color/small" />

    <EditText
        android:id="@+id/settings_full_name"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settings_phone_number"
        android:layout_alignTop="@+id/settings_phone_number"
        android:layout_alignEnd="@+id/settings_phone_number"
        android:layout_marginStart="1dp"
        android:layout_marginTop="56dp"
        android:layout_marginEnd="2dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/input_design"
        android:hint="Full Name..."
        android:padding="10dp"
        android:textColor="@color/small"
        android:textColorHint="@color/small" />

    <EditText
        android:id="@+id/settings_address"
        android:layout_width="361dp"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/settings_full_name"
        android:layout_alignTop="@+id/settings_full_name"
        android:layout_alignEnd="@+id/settings_full_name"
        android:layout_marginStart="3dp"
        android:layout_marginTop="55dp"
        android:layout_marginEnd="-2dp"
        android:layout_marginBottom="15dp"
        android:background="@drawable/input_design"
        android:hint="Address..."
        android:padding="10dp"
        android:textColor="@color/small"
        android:textColorHint="@color/small" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayout3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#07164E"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/maintext"
        android:layout_width="329dp"
        android:layout_height="115dp"
        android:layout_marginTop="320dp"
        android:fontFamily="@font/mazard"
        android:text="Start Your Journey \n With Cu-kart"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_login_btn"
        android:layout_width="162dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="180dp"
        android:background="@drawable/buttons"
        android:padding="10dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ef6d57"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_join_now_btn"
        app:layout_constraintEnd_toEndOf="@+id/maintext"
        app:layout_constraintStart_toStartOf="@+id/main_join_now_btn"
        app:layout_constraintTop_toTopOf="@+id/main_join_now_btn"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/main_join_now_btn"
        android:layout_width="162dp"
        android:layout_height="50dp"
        android:layout_alignBottom="@+id/main_login_btn"
        android:layout_marginTop="328dp"
        android:background="@drawable/button1"
        android:padding="10dp"
        android:text="Register"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/maintext"
        app:layout_constraintTop_toTopOf="@+id/maintext" />
</androidx.constraintlayout.widget.ConstraintLayout>